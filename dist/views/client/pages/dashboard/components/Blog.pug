section(class="pb-[50px]")
    div(class="flex justify-between pb-[20px]")
        div  
            h3(class="text-[16px]") You already know ?
            p(class="text-[24px] text-[#003459] font-bold") Useful pet knowledge 
        a(href=`/blog` class="xs:hidden flex justify-center py-[10px] w-[12%] h-[1%] text-[14px] text-[#003459 rounded-[57px] border-solid border-2 border-[#003459] hover:bg-[#ff7037]") 
            button View more
            img(src="/images/arrow_button.svg", alt="arrowbutton")   
    
    div(class="flex flex-wrap justify-between gap-4")
        each item in blogInfo
            figure(class="w-full sm:w-[48%] md:w-[30%]")
                a(href=`/blog/petBlog/${item.slug}/${item._id}` class="w-full h-full") 
                    img(src= item.thumbnail_photo, alt=item.name class="w-[100%] h-[50%] object-cover")
                figcaption(class="pt-[20px] flex flex-col gap-[10px]")
                    p(class="w-[30%] p-[5px] bg-[#00A7E7] rounded-[28px] text-[#FDFDFD] text-[10px] text-center") Pet Knowledge
                    h5(class="text-[16px] text-[#00171F] font-bold") #{item.title}
                    p(class="text-[14px] font-thin text-wrap") #{item.description}
    a(href="/blog" class="flex justify-center my-8 py-5 w-full text-[14px] text-[#003459] rounded-[57px] border-solid border-2 border-[#003459] hover:bg-[#ff7037] sm:hidden") 
            button View more
            img(src="/images/arrow_button.svg", alt="arrowbutton") 