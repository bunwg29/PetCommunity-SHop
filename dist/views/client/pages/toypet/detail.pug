extends ../../layouts/default.pug 

block main
    div(class="p-[2%] flex flex-col lg:flex-row justify-between border rounded-[20px] gap-6")
        figure(class="w-full lg:w-1/2 text-center relative")
            img(src=toyPet.avt, alt="image of pet" class="main-image w-full h-[200px] sm:h-[100px] lg:h-[50%] mx-auto rounded-[20px]" image_position=0)
            div(class="arrow-left absolute top-[30%] left-4 transform -translate-y-1/2 cursor-pointer bg-white p-2 rounded-full shadow-md opacity-40")
                i(class="fas fa-chevron-left text-gray-600")
            div(class="arrow-right absolute top-[30%] right-4 transform -translate-y-1/2 cursor-pointer bg-white p-2 rounded-full shadow-md opacity-40")
                i(class="fas fa-chevron-right text-gray-600")
            div(class="mt-[3%] mb-[1%] h-[60px] sm:h-[80px] lg:h-[15%] max-w-full gap-[10px] flex overflow-x-auto snap-x snap-mandatory")
                img(src=toyPet.avt, alt="image of pet" class="additional-image rounded-[6px] snap-start" image_position="main_avt")
                each imgObj, index in toyPet.images
                    img(src=imgObj class="additional-image rounded-[6px] snap-start" image_position=index + 1)
            figcaption(class="w-full")
                div(class="p-[1%] flex flex-wrap items-center justify-center gap-3 mt-2 bg-gradient-to-br from-linearFooter1 to-linearFooter2 rounded-[10px] text-[12px] sm:text-[14px] text-[#002A48] font-medium w-full")
                    img(src="/images/guaranteePet.svg", alt="guaranteePet icon", class="w-4 sm:w-auto")
                    p(class="w-full text-center") 100% health guarantee for pets
                    img(src="/images/guaranteeId.svg", alt="guaranteeId icon", class="w-4 sm:w-auto")
                    p(class="w-full text-center") 100% guarantee of pet identification

        section(class="w-full lg:w-1/2 pl-0 lg:pl-[5%]")
            h5(class="my-[2%] text-[20px] sm:text-[24px] font-bold text-[#002A48] w-full") #{toyPet.name}
            h5(class="mb-[2%] text-[18px] sm:text-[20px] font-bold text-[#002A48] w-full") #{toyPet.price} $
            div(class="my-[5%] flex flex-wrap gap-4 text-[14px] sm:text-[16px] font-medium")
                button(class="w-full sm:w-auto px-[5%] py-[1.5%] bg-[#003459] text-[#FDFDFD] rounded-[57px] addcart" productId=toyPet._id) Add to cart
                button.flex.items-center.px-3.border.border-gray-300.text-gray-800.text-xs.outline-none.bg-transparent.rounded-md(type='button' class='change-quantity py-1.5')
                    svg.fill-current(xmlns='http://www.w3.org/2000/svg' class='w-2.5 reduce-btn' viewbox='0 0 124 124')
                        path(d='M112 50H12C5.4 50 0 55.4 0 62s5.4 12 12 12h100c6.6 0 12-5.4 12-12s-5.4-12-12-12z' data-original='#000000')
                    span.mx-3.font-bold(class="quantity" quantity=1) 1
                    svg.fill-current(xmlns='http://www.w3.org/2000/svg' class='w-2.5 add-btn' viewbox='0 0 42 42')
                        path(d='M37.059 16H26V4.941C26 2.224 23.718 0 21 0s-5 2.224-5 4.941V16H4.941C2.224 16 0 18.282 0 21s2.224 5 4.941 5H16v11.059C16 39.776 18.282 42 21 42s5-2.224 5-4.941V26h11.059C39.776 26 42 23.718 42 21s-2.224-5-4.941-5z' data-original='#000000')
            table(class="w-full text-[12px] sm:text-[14px] text-[#667479]")
                tr
                    td(class="p-[2%] flex justify-between border-b")
                        p Type
                        p : #{toyPet.type}
                tr
                    td(class="p-[2%] flex justify-between border-b")
                        p Special offer
                        p : #{toyPet.special_offer}
    include ./components/MoreToyPet.pug
    
    script(src="/js/helpers/imageProductDetail.js")
    script(src="/js/client/pages/toyPet/addCart.js")
