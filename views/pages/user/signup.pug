doctype html
html
    head
        link(rel="icon", href="/images/favicon.svg")
        title #{title}
        link(rel="stylesheet", href="/styles/tailwind.css")
        link(rel="stylesheet", href="/styles/style.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

    body(class="bg-[#FFFFFF] px-[5%] py-[2%]")  
        main(class="px-[5%] py-[2%] flex justify-center border rounded-[32px] gap-[20px]")

            if errors && errors.general
                p(class="text-red-500 text-sm pl-[5px]") #{errors.general}

            form(action="/user/signup" method="POST" class="w-1/3 flex flex-col gap-[10px]") 
                figure(class="flex justify-center")
                    img(src="/images/favicon.svg", alt="favicon of website")
                header(class="my-[5%]")
                    h1(class="text-[40px] font-bold") Sign up
                    p(class="text-[18px] text-[#969696]") Sign up to enjoy the feature of Pet Community

                label(for="username") Email
                input(type="text" placeholder="petcommunity@gmail.com" name="email" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="username" required autocomplete="username")
                if errors && errors.email
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.email}

                label(for="name") Name
                input(type="text" placeholder="Tran Van A" name="name" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="name" required autocomplete="username")
                if errors && errors.name
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.name}

                label(for="phone-number") Phone number
                input(type="text" placeholder="0123456789" name="phonenumber" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="phone-number" required)
                if errors && errors.phonenumber
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.phonenumber}

                label(for="username") Password
                input(type="password" placeholder="Petcommunity123@" name="password" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="password" required autocomplete="new-password")
                if errors && errors.password
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.password}

                label(for="username") Confirm password
                input(type="password" placeholder="Petcommunity123@" name="confirmpassword" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="confirmpassword" required autocomplete="new-password")
                if errors && errors.confirmpassword
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.confirmpassword}
                label(for="facebook_address") Facebook Address
                input(type="text" name="facebook_address" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="facebook_address")
                button(type="submit" class="text-[14px] font-medium text-[#FFFFFF] w-full h-12 border rounded-[10px] bg-[#367AFF] my-[2%]") Sign up
                hr(class="border")
                button(type="button" class="text-[14px] font-bold text-[#232323] w-full h-12 border rounded-[10px] bg-[#ffffff] mt-[2%]") Sign up with Google
                div(class="flex justify-center gap-[5px] mt-[5%]")
                    p(class="text-[#6C6C6C]") Already have an account?
                    a(href="/user/signin" class="text-[#367AFF] underline underline-offset-2 font-bold") Sign in
            section(class="w-1/2")
                figure(class="flex justify-end items-center h-full")
                    img(src="/images/signup-thumbnail.png", alt="thumbnail-login" class="w-[80%] object-contain")
