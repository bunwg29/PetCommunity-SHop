include ../mixins/alert.pug
doctype html 
html.h-full
    head 
        link(rel="icon", href="/images/favicon.svg")
    
        title #{title}
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')

        link(rel="stylesheet", href="/styles/tailwind.css")
        link(rel="stylesheet", href="/styles/style.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

    body.h-full.w-full
        +alert()
        main(class="flex h-full w-full")
            .mobile-sidebar-toggle.absolute.top-4.left-0.z-50.block(class="md:hidden")
                button#sidebarToggle.text-gray-600.hover.text-gray-900
                    svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16M4 18h16')
            include ../partials/sider.pug
            block main