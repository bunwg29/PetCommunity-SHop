mixin alert()
    - if (messages.warming)
        #alert-border-1.w-96.h-14.fixed.top-0.right-0.z-50.flex.items-center.p-4.mb-4.text-yellow-800.rounded-lg.bg-yellow-50(
            class='dark:bg-gray-800 dark:text-yellow-300 transition-opacity duration-500 opacity-0'
            role='alert'
        )
            svg.flex-shrink-0.w-4.h-4(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='currentColor' viewbox='0 0 20 20')
                path(d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z')
            .ms-3.text-sm.font-medium
                | #{messages.warming}
    - if (messages.success)
        #alert-border-1.w-96.h-14.fixed.top-0.right-0.z-50.flex.items-center.p-4.mb-4.text-green-800.rounded-lg.bg-green-50(
            class='dark:bg-gray-800 dark:text-green-400 transition-opacity duration-500 opacity-0'
            role='alert'
        )
            svg.flex-shrink-0.w-4.h-4(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='currentColor' viewbox='0 0 20 20')
                path(d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z')            .ms-3.text-sm.font-medium
            .ms-3.text-sm.font-medium
                | #{messages.success}
    - if (messages.error)
        #alert-border-1.w-96.h-14.fixed.top-0.right-0.z-50.flex.items-center.p-4.mb-4.text-red-800.rounded-lg.bg-red-50(
            class='dark:bg-gray-800 dark:text-red-400 transition-opacity duration-500 opacity-0'
            role='alert'
        )
            svg.flex-shrink-0.w-4.h-4(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='currentColor' viewbox='0 0 20 20')
                path(d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z')            .ms-3.text-sm.font-medium
            .ms-3.text-sm.font-medium
                | #{messages.error}

    script(src="/js/components/alert.js") 

