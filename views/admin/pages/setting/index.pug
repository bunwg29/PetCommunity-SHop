extends ../../layouts/default.pug
block main
    section.bg-blueGray-50.h-full.w-full.overflow-y-auto
      .w-full.h-full.mx-auto.mt-6(class='lg:w-full')
        .relative.flex.flex-col.min-w-0.break-words.w-full.h-full.mb-6.shadow-lg.rounded-lg.bg-blueGray-100.border-0
          .rounded-t.bg-white.mb-0.px-6.py-6
            .text-center.flex.justify-between
              h6.text-xl.font-bold(class="text-[#00171F]")
                | SETTINGS
          .flex-auto.px-4.py-10.pt-0(class='lg:px-10')
              .flex.flex-wrap.border.rounded-xl.py-3
                .w-full.px-4(class='lg:w-12/12')
                  .relative.w-full.mb-3
                    label.block.uppercase.text-blueGray-600.text-xs.font-bold.mb-2(for='name')
                      | Role
                    input.border-0.px-3.py-3.placeholder-blueGray-300.text-blueGray-600.bg-white.rounded.text-sm.shadow.w-full.ease-linear.transition-all.duration-150#name(type='text' name="name" class='focus:outline-none focus:ring' value=roles.title) 
                .w-full.px-4(class='lg:w-12/12')
                  .relative.w-full.mb-3
                    label.block.uppercase.text-blueGray-600.text-xs.font-bold.mb-2(for='name')
                      | Name
                    input.border-0.px-3.py-3.placeholder-blueGray-300.text-blueGray-600.bg-white.rounded.text-sm.shadow.w-full.ease-linear.transition-all.duration-150#name(type='text' name="name" class='focus:outline-none focus:ring' value=account.name) 
                .w-full.px-4(class='lg:w-12/12')
                    each item, index in roles.permission
                        .flex.items-center.mb-4.justify-between.p-3.rounded-md(class="group/item hover:bg-slate-100")
                            div.flex.items-center
                                h1.italic #{index + 1}.
                                label.ms-2.text-base.text-gray-900.uppercase.text-start(class='text-[#003459]') #{item}
                            input.w-6.h-6.text-blue-600.bg-gray-100.border-gray-300.rounded(type='checkbox' class='focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600' checked)
                            


                


                