doctype html 
html 
    head 
        link(rel="icon", href="/images/favicon.svg")
        title #{title}
        link(rel="stylesheet", href="/styles/tailwind.css")
        link(rel="stylesheet", href="/styles/style.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

    body(class="bg-[#FFFFFF] px-[5%] py-[10%]")  
        main(class="px-[5%] py-[2%] flex justify-center border rounded-[32px] gap-[20px]")
            form(action=`/${prefixAdmin}/signin` method="POST" class="w-1/3 flex flex-col gap-[10px]") 
                figure(class="flex justify-center")
                    img(src="/images/favicon.svg", alt="favicon of website")
                label(for="username") Email
                input(type="text", placeholder="petcommunity@gmail.com" name="email" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="username" required)
                if errors && errors.email
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.email}
                label(for="username") Password
                input(type="password" name="password" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="password" required)
                if errors && errors.password
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.password}
                div(class="flex items-center gap-[10px]")
                button(type="submit" class="text-[14px] font-medium text-[#FFFFFF] w-full h-12 border rounded-[10px] bg-[#367AFF] mb-[2%]") Sign in 


            
            
