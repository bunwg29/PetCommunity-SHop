extends ../../layouts/default.pug
include ../../mixins/pagination.pug
block main
    .bg-gray-100(class='font-[sans-serif]')
        each item in toyPet
            .p-4.mx-auto(class='lg:max-w-7xl sm:max-w-full')
                .grid.grid-cols-1.gap-6(class='sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 max-xl:gap-4')
                    .bg-white.rounded-2xl.p-5.transition-all.relative(class='hover:-translate-y-2')
                        a.bg-gray-100.w-10.h-10.flex.items-center.justify-center.rounded-full.cursor-pointer.absolute.top-4.right-4(href=`/toycart/add/${item._id}/1`)
                            svg.fill-gray-800.inline-block(xmlns='http://www.w3.org/2000/svg' width='16px' viewbox='0 0 64 64')
                                path(d='M45.5 4A18.53 18.53 0 0 0 32 9.86 18.5 18.5 0 0 0 0 22.5C0 40.92 29.71 59 31 59.71a2 2 0 0 0 2.06 0C34.29 59 64 40.92 64 22.5A18.52 18.52 0 0 0 45.5 4ZM32 55.64C26.83 52.34 4 36.92 4 22.5a14.5 14.5 0 0 1 26.36-8.33 2 2 0 0 0 3.27 0A14.5 14.5 0 0 1 60 22.5c0 14.41-22.83 29.83-28 33.14Z' data-original='#000000')
                        a(href=`/toypet/detail/${item.slug}/${item._id}`) 
                            .overflow-hidden.mx-auto.aspect-w-16.aspect-h-8.mb-4(class='w-5/6 h-[210px] md:mb-2')
                                img.h-full.w-full.object-contain(src=item.avt alt=item.name)
                        div
                            h3.text-lg.font-extrabold.text-gray-800 #{item.name}
                            p.text-gray-600.text-sm.mt-2 #{item.size}#{item.unit}
                            h4.text-lg.text-gray-800.font-bold.mt-4 $#{item.price}
            div(class="flex justify-center py-5")
                +pagination()


