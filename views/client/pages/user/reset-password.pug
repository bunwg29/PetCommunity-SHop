doctype html 
html 
    head 
        link(rel="icon", href="/images/favicon.svg")
        title #{title}
        link(rel="stylesheet", href="/styles/tailwind.css")
        link(rel="stylesheet", href="/styles/style.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

    body(class="bg-[#FFFFFF] px-[5%] py-[2%]")  
        main(class="px-[5%] py-[2%] flex justify-center border rounded-[32px] gap-[20px]")
            form(
                action="/user/password/reset?_method=PATCH" 
                method="POST" 
                class="w-1/3 flex flex-col gap-[10px]"
                ) 
                figure(class="flex justify-center")
                    img(src="/images/favicon.svg", alt="favicon of website")
                header(class="my-[5%]")
                    h1(class="text-[40px] font-bold") Enter your new password
                    p(class="text-[18px] text-[#969696]") Change new password to enter Pet Community
                label(for="password") New Password
                input(type="password", name="password" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="password" required)
                if errors && errors.password
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.password}
                label(for="confirmpassword") Confirm Password
                input(type="password", name="confirm_password" class="pl-[20px] w-full h-10 border rounded-[10px] outline-[#367AFF]" id="confirm_password" required)
                if errors && errors.confirm_password
                    p(class="text-red-500 text-sm pl-[5px]") #{errors.confirm_password}
                button(type="submit" class="text-[14px] font-medium text-[#FFFFFF] w-full h-12 border rounded-[10px] bg-[#367AFF] mb-[2%]") Confirm 
                hr(clas="border border-[#6E6E6E]")
                div(class="flex justify-center gap-[5px] mt-[5%]")
                    p(class="text-[#6C6C6C]") Need an account? 
                    a(href="/user/signup" class="text-[#367AFF] underline underline-offset-2 font-bold") Create one
            section(class="w-1/2")
                figure(class="flex justify-end items-center h-full")
                    img(src="/images/signin-thumbnail.png", alt="thumbnail-login" class="w-[80%] object-contain")

            
            
